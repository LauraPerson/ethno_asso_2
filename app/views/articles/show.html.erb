
<div class="container">
  <div class="card-article-ressource">
    <h2 class="m-4"><%= @article.title %></h2>
    <% if @article.photo.attached? %>
      <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div>
      <p class="m-2"><%= @article.content %></p>
    </div>
  </div>

</div>