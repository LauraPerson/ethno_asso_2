
<div class="container">
  <div class="card-article-ressource">

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% if @article.photos.attached? %>
          <% @article.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= "active" if index == 0 %>">
                <%= cl_image_tag photo.key, crop: :fill %>
              </div>
          <% end %>
        <% end %>
      </div>
      <% if @article.photos.length > 1 %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      <% end %>
    </div>
    <div class="d-flex">
      <h2 class="m-4"><%= @article.title %></h2>
      <h3><%= @article.archive %></h3>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <% if current_user && current_user.admin %>
        <%= link_to edit_article_path(@article) do  %>
          <i class="fa-solid fa-pen-to-square m-2"></i>
        <% end %>
        
        <%= button_to( "Supprimer", article_path(@article), method: :delete, id:"btn-logout") %>
        
        <%= simple_form_for((@article), data: {turbo: false}) do |f| %>
          <%= f.input :archive, as: :hidden, input_html: { class: "toggle" } %>
          <%= f.submit "Archiver"%>
        <% end %>
      <% end %>
    </div>


    <div>
      <p class="m-2 article-content"><%= @article.content %></p>
    </div>
  </div>

</div>