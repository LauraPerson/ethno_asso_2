      <div class="d-flex"><%= image_tag "star.png", width: "60px", height:"60px", class:'mx-2' %><h3 class="m-5">Nos derniers projets</h3></div>
      <div class="article-container my-3">
        <% @last_articles_with_photos.reverse.each do |article| %>
          <div class="rectangle-card" style="background-image: url('<%= cl_image_path article.photos.first.key, height: 300%>')">
            <p><%= article.title %></p>
