<div class="container-80">
  <div class="banner banner-top">
    <%= image_tag "girl.png", class:"img-xs" %>
    <div class="banner-image-container">
      <%= image_tag "frise.png" %> 
    </div>
  </div>
</div>

<div class="container-80">
  <div class="banner banner-center">
    <div id="about">
      <%# <%= image_tag "line2.png", class:"d-none-xs" %> 
      <div class="about-text">

        <div class="d-flex justify-content-center">
          <%= image_tag "star.png", width: "60px", height:"60px" %>
          <h1 class="m-3">
            <%= @presentation1.name %>
          </h1>
          <% if current_user && current_user.super_admin %>
            <%= link_to edit_presentation_path(@presentation1) do %>
              <i class="fa-solid fa-pen-to-square">
              </i>
            <% end %>
          <% end %>
        </div>
        <div class=" ">
          <%= @presentation1.content %>
        </div>

      </div>
    </div>
  </div>

  <div class="d-flex my-3"><%= image_tag "star.png", width: "60px", height:"60px" %><h1 class="m-3">Nos membres permanents</h1></div>
  <div class="my-3"  id="team">
    <% @team.each do |member| %>
      <div class="d-flex flex-column align-items-center">
        <div class="avatar avatar-big" id="avatar-dash">
          <%= avatar(member) %>
        </div>
        <p id="member-name"> <strong><%= member.name %></strong> </p>
        <p><%= member.description %></p>
        <p class="grey-text"><%= mail_to member.email %></p>
      </div>
    <% end %>
  </div>

  <div class="d-flex my-3"><%= image_tag "star.png", width: "60px", height:"60px" %><h1 class="m-3">Conseil d'administration</h1></div>
  <div class="my-3"  id="board">
    <% @board.each do |member| %>
      <div class="d-flex flex-column align-items-center">
        <div class="avatar avatar-medium" id="avatar-dash">
          <%= avatar(member) %>
        </div>
        <p id="member-name"> <strong><%= member.name %></strong> </p>
        <p><%= member.description %></p>
      </div>
    <% end %>
  </div>
</div>

  <div class="banner my-5">
    <div id="presentation" class="d-flex">
      <div class="about-text ">
        <div class="d-flex justify-content-center my-3"><%= image_tag "star.png", width: "60px", height:"60px", class:"" %><h1 class="m-3"><%= @presentation2.name %></h1>
          <% if current_user && current_user.super_admin %>
            <%= link_to edit_presentation_path(@presentation2) do %>
              <i class="fa-solid fa-pen-to-square">
              </i>
            <% end %>
          <% end %>
        </div>
        <div class="">
          <%= @presentation2.content %>
        </div>
      </div>
    </div>
  </div>


<div class="container">
  <div class="d-flex align-items-center"><%= image_tag "star.png", width: "60px", height:"60px", class:'mx-2' %><h1 class="">Nos derniers projets</h1></div>
</div>
<div class="bottom-container">
  <div class="banner banner-bottom py-3">
    <div class="container" id="container-article-title">
      <div class="article-container my-3">
        <% @last_articles_with_photos.reverse.each do |article| %>
          <div class="rectangle-card shadow" style="background-image: url('<%= cl_image_path article.photos.first.key, height: 300%>')">
            <p><%= article.title %></p>
            <%= link_to article_path(article) do %>
              <div class="btn-primary my-2" id="read-article">
                Voir le projet
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="bottom-banner">
  <%= image_tag "frise_transp.png", class:"bottom-banner-img" %> 
</div>
</div>