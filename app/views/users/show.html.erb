
<div class="container center-element">
  <% if @user.photo.attached? %>
    <div class="avatar avatar-big" id="avatar-dash" style="background-image: url('<%= cl_image_path @user.photo.key, height: 300%>')">
      <%= link_to edit_users_admin_path(current_user) do %>
        <i class="fa-solid fa-pen-to-square" id="edit-user"></i>
      <% end %>
    </div>
  <% else %>
    <div style="background-image: url(<%= asset_path 'profil.jpg' %>)", class="avatar avatar-big" id="avatar-dash">
      <%= link_to edit_dashboard_path(current_user) do %>
        <i class="fa-solid fa-pen-to-square" id="edit-user"></i>
      <% end %>
    </div>
  <% end %>
  <p><%= @user.first_name %> <%= @user.last_name %> </p>
  <p><%= @user.description %></p>

  <div class="flex-center">
    <%= link_to new_article_path, class:"btn-primary m-1" do %>
        Cr√©er un article
    <% end %>
    <%= link_to new_ressource_path, class:"btn-primary m-1" do %>
        Ajouter une ressource
    <% end %>
    <%= link_to new_dashboard_path, class:"btn-primary m-1" do %>
        Ajouter un membre
    <% end %>
  </div>



</div>
