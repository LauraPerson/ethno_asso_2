<div class="container d-flex flex-column align-items-center">
  <h3 class="my-5">Membres actuels</h3>

  <% @users.each do |user| %>
    <div class="d-flex align-items-center justify-content-between list-card card-gnl">
      <div class="d-flex align-items-center">
        <div class="avatar-small avatar mx-2">
          <%= avatar(user) %>
        </div>
        <p class="m-0"><%= user.first_name %> <%= user.last_name %></p>
      </div>
      <div class="d-flex">

        <% if user.archive == false %>
          <%= button_to "Supprimer", archive_user_path(user.id, user:user), method: :patch, class:"btn-secondary mx-2" %>
        <% end %>
        <%= link_to "Modifier", edit_dashboard_path(user), class:"btn-secondary mx-2"  %>
      </div>
    </div>
  <% end %>

  <h3 class="my-5">Anciens membres</h3>

    <% @archived_users.each do |user| %>
    <div class="d-flex align-items-center justify-content-between list-card card-gnl">
      <div class="d-flex align-items-center">
        <div class="avatar-small avatar mx-2">
          <%= avatar(user) %>
        </div>
        <p class="m-0"><%= user.first_name %> <%= user.last_name %></p>
      </div>
    </div>
  <% end %>
</div>