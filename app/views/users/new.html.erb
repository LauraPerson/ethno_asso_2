<div class="container">
  <div class="row flex-center">
    <div class="col-12 col-m-6 col-xl-4 my-4">
      <h2>Ajouter un nouvel utilisateur</h2>
      <%= simple_form_for @user, url: dashboard_index_path(@user), method: :post do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>