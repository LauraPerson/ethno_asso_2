<div class="container">
  <%= simple_form_for((@ressource), data: {turbo: false}) do |f| %>
    <%= f.input :title, placeholder: "Titre de la ressource", label: false  %>
    <%= f.input :content, as: :rich_text_area, placeholder: "Contenu de la ressource", label: false   %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, label:"Ajouter des images" %>
    <%= f.submit "Publier", class:"btn-primary"%>
  <% end %>
</div>
